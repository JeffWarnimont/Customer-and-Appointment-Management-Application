<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Appointments">
   <children>
      <VBox prefHeight="400.0" prefWidth="800.0">
         <children>
            <HBox prefHeight="34.0" prefWidth="700.0">
               <children>
                  <RadioButton fx:id="AllApptsRB" mnemonicParsing="false" text="All Appointments">
                     <toggleGroup>
                        <ToggleGroup fx:id="AppointmentsRG" />
                     </toggleGroup>
                     <padding>
                        <Insets left="20.0" right="10.0" />
                     </padding>
                  </RadioButton>
                  <RadioButton fx:id="WeeklyApptsRB" mnemonicParsing="false" text="Weekly Appointments" toggleGroup="$AppointmentsRG">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </RadioButton>
                  <RadioButton fx:id="MonthlyApptsRB" mnemonicParsing="false" text="Monthly Appointments" toggleGroup="$AppointmentsRG">
                     <padding>
                        <Insets left="10.0" right="5.0" />
                     </padding>
                  </RadioButton>
               </children>
            </HBox>
            <TableView prefHeight="344.0" prefWidth="800.0">
              <columns>
                <TableColumn prefWidth="100.0" text="Appointment ID" />
                <TableColumn prefWidth="50.0" text="Title" />
                  <TableColumn prefWidth="75.0" text="Description" />
                  <TableColumn prefWidth="75.0" text="Location" />
                  <TableColumn prefWidth="75.0" text="Contact" />
                  <TableColumn prefWidth="75.0" text="Type" />
                  <TableColumn prefWidth="100.0" text="Start Date/Time" />
                  <TableColumn prefWidth="100.0" text="End Date/Time" />
                  <TableColumn prefWidth="75.0" text="Customer ID" />
                  <TableColumn prefWidth="75.0" text="User ID" />
              </columns>
            </TableView>
            <HBox prefHeight="50.0" prefWidth="700.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#OnActionNavToAddAppt" prefHeight="25.0" prefWidth="80.0" text="Add">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#OnActionNavToModAppt" prefHeight="25.0" prefWidth="80.0" text="Modify">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#OnActionDeleteAppt" prefHeight="25.0" prefWidth="80.0" text="Delete">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#OnActionReturnToMain" prefHeight="25.0" prefWidth="80.0" text="Exit">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
